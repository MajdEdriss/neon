{
  "name": "@aotearoan/neon",
  "description": "Neon is a design system for use with VueJS. It supports light and dark modes and can be extended to support multiple themes",
  "version": "0.7.1",
  "main": "dist/@aotearoan/neon.umd.js",
  "types": "dist/@aotearoan/components.d.ts",
  "files": [
    "src/sass/*",
    "dist/@aotearoan/neon*",
    "dist/@aotearoan/components.d.ts",
    "dist/@aotearoan/components/**",
    "package.json",
    "*-init.scss",
    "*-theme.scss"
  ],
  "keywords": [
    "sass",
    "css",
    "vue",
    "design",
    "system",
    "component",
    "library",
    "dark",
    "light",
    "theme",
    "mode"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name @aotearoan/neon ./src/components.ts",
    "prepare": "tsc --emitDeclarationOnly",
    "lint": "vue-cli-service lint",
    "lint:scss": "stylelint ./src/**/*.scss",
    "test:unit": "vue-cli-service test:unit",
    "prettier": "npx prettier --write src/."
  },
  "dependencies": {
    "register-service-worker": "^1.7.1",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.3",
    "vue-i18n": "^8.17.4",
    "vue-property-decorator": "^8.4.1",
    "vue-router": "^3.1.6"
  },
  "peerDependencies": {
    "@aotearoan/sass-farbig": "^1.0.11"
  },
  "devDependencies": {
    "@aotearoan/sass-farbig": "^2.0.0",
    "@types/jest": "^24.0.19",
    "@types/jsdom-global": "^3.0.2",
    "@types/vue": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@vue/cli-plugin-eslint": "^4.3.0",
    "@vue/cli-plugin-pwa": "^4.3.0",
    "@vue/cli-plugin-router": "^4.3.0",
    "@vue/cli-plugin-typescript": "^4.3.0",
    "@vue/cli-plugin-unit-jest": "^4.3.0",
    "@vue/cli-service": "^4.3.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "1.0.0-beta.31",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "jsdom": "^16.2.2",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^10.2.6",
    "node-sass": "^4.12.0",
    "prettier": "2.0.5",
    "sass-loader": "^8.0.2",
    "stylelint": "^12.0.1",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.13.0",
    "typescript": "~3.8.3",
    "use-global-hook": "^0.1.12",
    "vue-template-compiler": "^2.6.11"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "node --max_old_space_size=4096 node_modules/@vue/cli-service/bin/vue-cli-service.js lint --fix"
    ],
    "*.{css,scss}": [
      "stylelint ./src/**/*.scss --fix"
    ]
  },
  "author": "Andrew Erickson <andrew@aotearoan.com>",
  "license": "MIT",
  "repository": "https://github.com/aotearoan/neon.git",
  "bugs": {
    "url": "https://github.com/aotearoan/neon/issues"
  }
}
